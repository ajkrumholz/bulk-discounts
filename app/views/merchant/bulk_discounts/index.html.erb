<h1>Merchant Bulk Discount Index</h1>

<h2><%= @merchant.name %></h2>

<% @discounts.each do |discount|  %>
  <ul id="discount-<%= discount.id %>">
    <li>
      <h3>
      <%= link_to "#{discount.discount_percent}% off #{discount.quantity_threshold} or more items!", merchant_bulk_discount_path(@merchant, discount) %>
      </h3>
      <p><%= link_to "Delete #{discount.discount_percent}% Discount", merchant_bulk_discount_path(@merchant, discount), method: :delete %></p>
    </li>
  </ul>
<% end %>

<h3><%= link_to "Create a new discount", new_merchant_bulk_discount_path(@merchant) %></h3>

<div id="upcoming_holidays">
  <h3>Upcoming Holidays</h3>
  <ol>
    <% @next_three_holidays.each do |holiday| %>
      <li><%= holiday.name %>: <%= holiday.date %></li>
    <% end %>
  </ol>
</div>